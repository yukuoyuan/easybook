<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.yky.easybook">
    <!--网咯权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".EasyBookApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--过度界面-->
        <activity
            android:name=".guidemodule.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--引导界面-->
        <activity
            android:name=".guidemodule.activity.GuideActivity"
            android:screenOrientation="portrait" />
        <!--登录注册界面-->
        <activity
            android:name=".usermodule.activity.LoginAndRegistActivity"
            android:screenOrientation="portrait" />
        <!--主界面-->
        <activity
            android:name=".mainmodule.activity.MainActivity"
            android:screenOrientation="portrait" />
        <!--推送通知设置的界面-->
        <activity
            android:name=".messagemodule.activity.NotificationSettingActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>